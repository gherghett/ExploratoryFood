@model OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Order #@Model.OrderId</h2>
            <p class="text-center text-muted">Placed on @Model.CreationDate.ToString("f")</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <img src="@Model.RestaurantImageUrl" class="card-img-top" alt="@Model.RestaurantName">
                <div class="card-body text-center">
                    <h4 class="card-title">@Model.RestaurantName</h4>
                    <p class="card-text">@Model.RestaurantAddress</p>
                    <p class="card-text">Contact: @Model.RestaurantContact</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <img src="@Model.MenuItemImageUrl" class="card-img-top" alt="@Model.MenuItemName">
                <div class="card-body text-center">
                    <h4 class="card-title">@Model.MenuItemName</h4>
                    <p class="card-text">Price: $@Model.MenuItemPrice</p>
                    <p class="card-text"><strong>Quantity:</strong> 1</p>
                    <p class="card-text"><strong>Extra Instructions:</strong> @Model.ExtraInstructions</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card p-3">
                <h4>Customer Information</h4>
                <p><strong>Name:</strong> @Model.CustomerName</p>
                <p><strong>Address:</strong> @Model.CustomerAddress</p>
                <p><strong>Phone:</strong> @Model.CustomerPhone</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card p-3">
                <h4>Order Status</h4>
                <p><strong>Status:</strong> @Model.Status</p>
                <p><strong>Delivery Instructions:</strong> @Model.DeliveryInstructions</p>
            </div>
        </div>
    </div>
</div>